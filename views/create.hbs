<form class="form col s12" id="bookCreate" action="/createBook" method="POST">
    <h2>Добавить книгу</h2>

    <div class="form-group">
        <label class="col-form-label" for="title">Название книги</label>
        <input class="validate form-control" placeholder="Пожалуйста введите название книги ..." type="text" id="title"
            name="title">
    </div>

    <div class="form-group">
        <label class="col-form-label" for="author">Автор</label>
        <input class="validate form-control" placeholder="Автор" type="text" id="author" name="author">
    </div>

    <div class="form-block">
        <div class="form-group typeBookSelect">
            <label class="col-form-label" for="typeBook">Тип книги</label>
            <select class="form-control" name="typeBook" placeholder="Тип книги">
                <option value="Новинка">Новинка</option>
                <option value="Бестцеллер">Бестцеллер</option>
                <option value="Распродажа">Распродажа</option>
            </select>
        </div>

        <div class="form-group priceInput">
            <label class="col-form-label" for="price">Цена</label>
            <input class="form-control" type="text" placeholder="Пожалуйста укажите цена книги в белоруских рублях"
                name="price" id="price">
        </div>
    </div>


