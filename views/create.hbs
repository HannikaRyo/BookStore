        <label class="col-form-label" for="image">Url изображения</label>
        <input class="form-control" type="text" placeholder="Пожалуйста добавите url изображения..." name="image"
            id="image">
    </div>


    <div class="form-group">
        <label class="col-form-label" for="descr">Описание</label>
        <textarea id="descr" name="description" placeholder="Пожалуйста добавите краткое описание книги..."
            spellcheck="true" rows="3" class="form-control"></textarea>
    </div>

    <div class="toolbar">
        <button class="btn btn-primary sendBtn" type="submit">
            Добавить
            <i class="material-icons right imgBtnSend">send</i>
        </button>

        <button class="btn btn-primary clearBtn" type="button" id="reset">
            Очистить форму
            <i class="material-icons right imgBtnSend">clear_all</i>
        </button>
