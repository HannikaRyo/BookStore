    <div class="form-group">
        <label class="col-form-label">Формат обложки</label>
        <div class="custom-control custom-radio">
            <input type="radio" id="hardCover" name="format" class="custom-control-input" value="Твёрдая" checked>
            <label class="custom-control-label" for="hardCover">Твёрдая</label>
        </div>
        <div class="custom-control custom-radio">
            <input type="radio" id="softCover" name="format" class="custom-control-input" value="Мягкая">
